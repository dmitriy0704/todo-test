{
  "openapi": "3.1.0",
  "info": {
    "title": "ToDo REST API",
    "description": "ToDo REST API Docs",
    "version": "0.1"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Локальный сервер разработки"
    }
  ],
  "paths": {
    "/api/catalogue/products": {
      "get": {
        "responses": {
          "200": {
            "description": "Списка задач получен",
            "content": {
              "application/todo+json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "title": "Идентификатор задачи",
                        "nullable": false,
                        "example": "5e0ea466-a385-11ef-8888-531aa9123a36"
                      },
                      "todoTitle": {
                        "type": "string",
                        "title": "Название товара",
                        "nullable": false,
                        "example": "Молоко, 3,2%, 1 литр"
                      },
                      "details": {
                        "type": "string",
                        "title": "Подробное описание товара",
                        "nullable": true,
                        "example": "Молоко с жирностью 3,2% в упаковке 1 литр"
                      }
                    },
                    "required": [
                      "id",
                      "title"
                    ]
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "requestBody": {
          "content": {
            "application/vnd.eselpo.catalogue.new-product-payload.v1+json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "title": "Название товара",
                    "nullable": false,
                    "example": "Молоко, 3,2%, 1 литр"
                  },
                  "details": {
                    "type": "string",
                    "title": "Подробное описание товара",
                    "nullable": true,
                    "example": "Молоко с жирностью 3,2% в упаковке 1 литр"
                  }
                },
                "required": [
                  "title"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Товар успешно создан",
            "headers": {
              "Location": {
                "required": true
              }
            },
            "content": {
              "application/vnd.eselpo.catalogue.product.v1+json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "title": "Идентификатор товара",
                      "nullable": false,
                      "example": "5e0ea466-a385-11ef-8888-531aa9123a36"
                    },
                    "title": {
                      "type": "string",
                      "title": "Название товара",
                      "nullable": false,
                      "example": "Молоко, 3,2%, 1 литр"
                    },
                    "details": {
                      "type": "string",
                      "title": "Подробное описание товара",
                      "nullable": true,
                      "example": "Молоко с жирностью 3,2% в упаковке 1 литр"
                    }
                  },
                  "required": [
                    "id",
                    "title"
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Запрос содержит ошибки валидации"
          }
        }
      }
    }
  }
}
